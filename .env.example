# .env.example

# Application Port
PORT=6003

# MongoDB Connection URI
MONGO_URI=mongodb://localhost:27017/user_app_db

# # JWT Secret Key for signing and verifying tokens
# # CHANGE THIS TO A STRONG, RANDOM STRING IN PRODUCTION!
JWT_SECRET=your_super_secret_jwt_key_here_please_change_this_in_production_environment

# # JWT Expiration Time (e.g., '1h', '24h', '30d')
JWT_EXPIRES_IN=1d

# # Node.js Environment (development, production, test)
NODE_ENV=development

# # Rate Limiting Configuration (adjust as needed)
# # Max requests per windowMs for general API
RATE_LIMIT_WINDOW_MS=60000 # 1 minute
RATE_LIMIT_MAX_REQUESTS=100 # 100 requests per minute

# # Rate Limiting Configuration for Authentication (more strict)
# AUTH_RATE_LIMIT_WINDOW_MS=60000 # 1 minute
# AUTH_RATE_LIMIT_MAX_REQUESTS=10 # 10 requests per minute for login/register

# # CORS Allowed Origins (comma-separated, e.g., 'http://localhost:3000,https://yourfrontend.com')
# # Use '*' for all origins in development, but restrict in production.
CORS_ORIGIN=*

# # Multer Upload Directory (relative to project root)
# # This will be used by the upload middleware
UPLOAD_DIR=uploads
